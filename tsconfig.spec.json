{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "paths": {
      "#*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules"]
}
