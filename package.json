{
  "name": "mgrb-backend-template",
  "version": "1.0.0",
  "description": "A backend template built with Express and Node.js to kickstart development quickly.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start:dev": "ts-node-dev --respawn -r tsconfig-paths/register ./src/bin/www.ts",
    "build": "tsc -p tsconfig.json && tsconfig-replace-paths -p tsconfig.json",
    "start": "node build/src/bin/www.js",
    "test": "jest --config jest.config.js --coverage",
    "lint": "eslint --ext .ts ./src",
    "format": "prettier ./src --write",
    "clean": "rm -rf build && rm -rf coverage",
    "purge": "rm -rf node_modules"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.2.0",
    "axios": "^1.7.7",
    "express": "^5.0.1",
    "pino": "^9.5.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.16.12",
    "eslint": "^8.45.0",
    "jest": "~29.6.1",
    "prettier": "~3.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "@types/uuid": "^10.0.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "~5.1.6"
  }
}
